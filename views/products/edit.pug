extends ../layout

block content
    h1 Edit Product
    form(action="/products/edit/"+product._id,method="post")
        .form-group
            label(for="name") Name
            input#name(type="text", class="form-control", name="name", value=product.name)
        .form-group
            label(for="price") Price (Rs)
            input#price(type="text", class="form-control", name="price", value=product.price)
        .form-group
            label(for="discription") Description
            input#discription(type="text", class="form-control", name="discription", value=product.discription)
        .form-group
            label(for="rating") Rating
            input#rating(type="number", min="0", max="5", class="form-control", name="rating", value=product.rating)
        input(type="submit", class="btn ")